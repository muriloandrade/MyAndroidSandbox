<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Map"
        android:id="@+id/openMapButton"
        android:layout_marginBottom="16dp"
        android:onClick="openMap" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Website"
        android:id="@+id/openWebButton"
        android:layout_marginBottom="16dp"
        android:onClick="openWeb" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Email"
        android:id="@+id/sendEmailButton"
        android:layout_marginBottom="16dp"
        android:onClick="sendEmail" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Image"
        android:id="@+id/sendImageButton"
        android:onClick="sendImage"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phoneNumbEdit"
            android:layout_weight="1"
            android:hint="Phone number"
            android:layout_marginBottom="16dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:id="@+id/callButton"
            android:layout_weight="1"
            android:onClick="call" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Contact"
            android:id="@+id/pickContactButton"
            android:onClick="pickContact"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/contactText"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Receiver Activity"
        android:id="@+id/receiverButton"
        android:onClick="gotoReceiver" />

</LinearLayout>